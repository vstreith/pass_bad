<div class="container">
  <div class="row">
    <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item"><%= link_to "Mon club", clubs_path, class:"sidebar-link active" %></li>
        <li class="sidebar-item"><%= link_to "Mes Réservations", your_reservations_path, class:"sidebar-link" %></li>
        <li class="sidebar-item"><%= link_to "Mes inscriptions", your_inscriptions_path, class:"sidebar-link" %></li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
            Mes clubs
        </div>
        <div class="panel-body">
          <% @clubs.each do |club| %>
            <div class="row">
              <div class="col-md-2">
                <%= image_tag club.photos[0].image.url(:thumb) if club.photos.length > 0 %>
              </div>
              <div class="col-md-7">
                <h4><%= club.club_name %></h4>
              </div>
              <div class="col-md-3 right">
                <%= link_to "Mettre à jour", edit_club_path(club), class:"btn btn-primary" %>
              </div>
            </div>
            <hr>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
