<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
      <%= link_to 'Modifier mon profil', edit_user_registration_path, class: 'sidebar-link active' %></li>
    </ul>
    <br>
    <%= link_to 'Voir mon profil', user_path(current_user.id), class: 'btn btn-default wide1' %>
  </div>
  <div class="col-md-7 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">Mon Profil</div>
      <div class="panel-body">
        <div class="container">
          <h2>Modifier le profil</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom complet (Prénom+Nom)" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <span class="btn btn-default btn-file">
                    Upload ma photo
                    <%= f.file_field :avatar %>
                  </span>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.text_field :licence_number, autofocus: true, class: "form-control", placeholder: "Numéro de licence" %>
            </div>

            <div class="form_group">
              <%= f.text_field :club, autofocus: true, rows:5, col:25, class: "form-control", placeholder: "Club" %>
            </div>
            <br>

            <h3>Modifier mon mot de passe</h3>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nouveau mot de passe" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmez le mot de passe" %>
            </div>

            <div class="actions">
              <%= f.submit "Enregistrer", class: "btn btn-primary" %>
            </div>
          <% end %>

          <br>
          <h3>Suppression de compte</h3>

          <p>Mécontent? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %></p>

        </div>
      </div>
    </div>

  </div>
</div>
