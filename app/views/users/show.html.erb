<div class="row">
  <div class="col-md-3">
    <%= image_tag avatar_url(@user), class:"avatar-full" %>
    <div class="panel panel-default">
      <div class="panel-heading">VÃ©rification</div>
      <div class="panel-body">
        E-mail : <%= @user.email %> <br>
        Licence: <%= @user.licence_number %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2><%= @user.fullname %></h2>
    <div class="description row-space-3">
      <%= @user.club %>
    </div>

    <h4>Clubs (<%= @clubs.length %>)</h4><br>
        <div class="row">
            <% @clubs.each do |club| %>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading preview">
                        <%= image_tag club.photos[0].image.url(:medium) if club.photos.length > 0 %>
                    </div>
                    <div class="panel-body">
                        <%= link_to club.club_name, club %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>

  </div>
</div>
