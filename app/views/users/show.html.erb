<div class="row">
  <div class="col-md-3">
    <%= image_tag avatar_url(@user), class:"avatar-full" %>

    <% if current_user != @user %>
      <div class="row-space-2">
        <%= link_to "Envoyer un message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class:"btn btn-primary wide" %>
      </div>
    <% end %>

    <div class="panel panel-default">
      <div class="panel-heading">Vérification</div>
      <div class="panel-body">
        <% if @user.confirmed_at %>
          Email confirmé
        <% else %>
          Email non confirmé
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2><%= @user.fullname %></h2>
    <div class="description row-space-3">
      <%= @user.club %>
    </div>

    <h4>Clubs (<%= @clubs.length %>)</h4><br>
        <div class="row">
            <% @clubs.each do |club| %>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading preview">
                        <%= image_tag club.photos[0].image.url(:medium) if club.photos.length > 0 %>
                    </div>
                    <div class="panel-body">
                        <%= link_to club.club_name, club %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>

  </div>
</div>
